{
  "name": "@balena/jellyfish-plugin-github",
  "description": "GitHub Jellyfish Plugin",
  "version": "1.1.16",
  "repository": {
    "type": "git",
    "url": "https://github.com/product-os/jellyfish-plugin-github"
  },
  "engines": {
    "node": ">=14.2.0"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/"
  ],
  "directories": {
    "lib": "lib"
  },
  "deplint": {
    "files": [
      "lib/**/*.{ts}"
    ],
    "modules": [
      "lib"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "balena-lint --fix"
    ]
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "npm run clean && tsc -p tsconfig.build.json",
    "lint": "balena-lint lib test && npm run check && deplint && depcheck --ignore-bin-package --ignores=@types/jest",
    "lint-fix": "balena-lint --fix lib test",
    "unit": "jest test/unit",
    "integration": "jest --runInBand --bail test/integration",
    "test": "npm run lint && npm run unit",
    "doc": "typedoc lib/ && touch docs/.nojekyll",
    "prepack": "npm run build",
    "check": "jellycheck"
  },
  "author": "Balena.io. <hello@balena.io>",
  "license": "UNLICENSED",
  "dependencies": {
    "@balena/jellyfish-action-library": "^15.0.5",
    "@balena/jellyfish-assert": "^1.1.60",
    "@balena/jellyfish-plugin-base": "^2.1.185",
    "@octokit/auth-app": "^3.5.3",
    "@octokit/plugin-retry": "^3.0.9",
    "@octokit/plugin-throttling": "^3.5.1",
    "@octokit/rest": "^18.6.7",
    "bluebird": "^3.7.2",
    "lodash": "^4.17.21",
    "uuid": "^8.3.2",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@balena/jellycheck": "^0.1.1",
    "@balena/jellyfish-config": "^1.4.3",
    "@balena/jellyfish-core": "^5.0.7",
    "@balena/jellyfish-environment": "^4.3.10",
    "@balena/jellyfish-plugin-default": "^17.0.0",
    "@balena/jellyfish-test-harness": "^5.1.24",
    "@balena/jellyfish-types": "^0.8.5",
    "@balena/lint": "^6.1.1",
    "@types/bluebird": "^3.5.35",
    "@types/jest": "^26.0.23",
    "@types/uuid": "^8.3.1",
    "depcheck": "^1.4.2",
    "deplint": "^1.1.3",
    "jest": "^27.0.6",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^11.0.0",
    "nock": "^13.1.1",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.3",
    "typedoc": "^0.21.2",
    "typescript": "4.3.5"
  },
  "peerDependencies": {
    "@balena/jellyfish-core": "^5.0.7",
    "@balena/jellyfish-environment": "^4.3.10",
    "@balena/jellyfish-plugin-default": "^17.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
